      alert(CND(d1)-X * Math.exp(-r * T) * CND(d2))
      //alert(answer)
    }
    else
    {
      answer = X * Math.exp(-r * T) * CND(-d2) - S * CND(-d1);
    }
    alert(answer)
    document.getElementById("result").value=answer;
  }

